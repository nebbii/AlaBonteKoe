{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Movie</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ entity.title }}</td>
            </tr>
            <tr>
                <th>Publicationdate</th>
                <td>{{ entity.publicationDate|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Genre</th>
                <td>{{ entity.genre }}</td>
            </tr>
            <tr>
                <th>Runtime</th>
                <td>{{ entity.runtime }}</td>
            </tr>
            <tr>
                <th>Productioncompany</th>
                <td>{{ entity.productioncompany }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ entity.description }}</td>
            </tr>
        </tbody>
    </table>


    <h2>Shows</h2>

    <table>
        {% for showschema in entity.getShowschema() %}
            <tr>
                <td>{{ showschema.getDatetime().format("j F Y H:i") }}</td>
                <td> <a href="{{ path('reservation_new', { 'showschema_id': showschema.id }) }}">Order</a>
            </tr>
        {% endfor %}
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('movie') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('movie_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
